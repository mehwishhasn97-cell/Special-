<!-- MOVING HEARTS -->
<script>
for(let i=0;i<15;i++){
  let heart=document.createElement('div');
  heart.className='heart';
  heart.style.left=Math.random()*100+'%';
  heart.style.animationDuration=(3+Math.random()*3)+'s';
  document.body.appendChild(heart);
}
</script>

<!-- MAIN SCRIPT -->
<script>
const continueBtn=document.getElementById('continueBtn');
const card=document.getElementById('card');
const loader=document.getElementById('loader');
const question=document.getElementById('question');
const yes=document.getElementById('yes');
const no=document.getElementById('no');
const message=document.getElementById('message');
const game=document.getElementById('game');
const finalLetter=document.getElementById('finalLetter');
const openLetter=document.getElementById('openLetter');
const letterText=document.getElementById('letterText');
const whoosh=document.getElementById('whoosh');
const pop=document.getElementById('pop');

// CONTINUE BUTTON
continueBtn.onclick=()=>{
  card.style.display='none';
  loader.style.display='block';
  whoosh.play();
  setTimeout(()=>{
    loader.style.display='none';
    question.style.display='block';
    yes.style.display='block';
    setTimeout(()=>{ no.style.display='block'; },1000);
  },3000);
};

// BALLOON CLICK
no.onclick=()=>{
  pop.play();
  no.style.transform='scale(0)';
  setTimeout(()=>{ yes.click(); },500);
};

yes.onclick=()=>{
  question.style.display='none';
  message.style.display='block';
  message.innerText='Areesha aap kitni achi ho üíú';
  setTimeout(()=>{ game.style.display='block'; },3000);
};

// GAME BOX CLICK
const box2=document.getElementById('box2');
box2.onclick=()=>{
  game.style.display='none';
  finalLetter.style.display='block';
  typeLetter('Areesha, main tumhe bohot lambe arsey se pasand karta hoon. Aapko kuch nahi karna, bas intizaar karo. Agar gussa ho to "Yes, I\'m angry" bolo, warna "Mere barey me janna chahti ho" is number par: +1(438)8078969');
};

// TYPING EFFECT
function typeLetter(text){
  letterText.innerHTML='';
  let i=0;
  function typing(){
    if(i<text.length){
      letterText.innerHTML+=text.charAt(i);
      i++;
      setTimeout(typing,50);
    }
  }
  typing();
}

// OPEN LETTER
openLetter.onclick=()=>{
  whoosh.play();
  alert('Letter opened with animation + sound! üíå');
};
</script>

